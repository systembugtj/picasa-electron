<div class="demo-tab">
  <SplitView @isVertical={{true}} @class="splitViewVertical" as |split|>
    <split.child @class="border" />
    {{split.sash}}
    <split.child @class="composite">
      <SplitView @isVertical={{true}} as |split2|>
        <split2.child @class="border" />
        {{split2.sash}}
        <split2.child @class="border" />
      </SplitView>
    </split.child>
  </SplitView>
</div>
