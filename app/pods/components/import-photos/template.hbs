
{{#paper-card as |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}} {{ t "import.folder.label" }}{{/text.headline}}
      {{#text.subhead}} {{source}} {{/text.subhead}}
    {{/title.text}}
  {{/card.title}}
  {{#card.content class="layout-row layout-align-space-between"}}
    {{#card.media size="lg"}}

    {{/card.media}}
    {{#unless importing}}
      {{#paper-select
        label=folderSelectLabel
        selected=selectedFolder
        options=folders
        onChange=(action (mut selectedUser))
        as |folder|}}
        {{folder.cwd}}
      {{/paper-select}}
    {{/unless}}
    {{#if importing}}
      {{fileInProgress}}
      {{paper-progress-linear}}
    {{/if}}
    {{#card.actions}}
      {{#paper-button onClick=(action "startImport")}}{{t "button.start"}}{{/paper-button}}
      {{#paper-button onClick=(action "stopImport")}}{{t "button.stop"}}{{/paper-button}}
    {{/card.actions}}
  {{/card.content}}
{{/paper-card}}